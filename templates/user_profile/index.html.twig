{% extends 'main/index.html.twig' %}

{% block title %}Hello UserProfileController!{% endblock %}

{% block content %}
    <section class="profile">
        <h1 class="profile__title">PROFILE</h1>
        <div class="profile__content">
            <div class="profile__body">
                <table class="table">
                    <tbody>
                        <tr>
                            <td>{% trans %}EMAIL{% endtrans %}</td>
                            <th scope="row">{{ app.user.email }}</th>
                        </tr>
                        <tr>
                            <td>{% trans %}REGISTER DATE{% endtrans %}</td>
                            <th scope="row">{{ app.user.createdAt|date('Y-m-d H:m:s') }}</th>
                        </tr>
                        <tr>
                            <td>{% trans %}ROLE{% endtrans %}</td>
                            <th scope="row">
                            {% set comma = "," %}
                                {% for role in app.user.roles %}
                                    {{ role }} 
                                    {% if loop.last != true %}
                                        {{ comma }} 
                                    {% endif %}
                                {% endfor %}
                            </th>
                        </tr>
                    </tbody>
                </table>
                <br>
                <a href="#" class="profile__link large-outline-btn">{% trans %}EDIT PROFILE{% endtrans %}</a>
            </div>
            <div class="profile__image">
                {% if (app.user.photo) %}
                    <img src="{{ asset('images/users/') }}{{ app.user.photo }}" class=""
                        alt="{% trans %}USER PHOTO{% endtrans %}">
                {% else %}
                    <img src="{{ asset('images/users/no-avatar.png') }}" class=""
                        alt="{% trans %}PHOTO NOT FOUND{% endtrans %}">
                {% endif %}
            </div>
        </div>
    </section>
{% endblock %}
