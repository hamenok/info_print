{% extends 'base.html.twig' %}

{% block title %}{% trans %}INFO PRINT{% endtrans %}{% endblock %}

{% block side %}
<div>
    <header class="panels">
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('home') }}"><img src="{{ asset('images/logo/logo.png') }}"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarNavAltMarkup" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                    <div class="navbar-nav">
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    {% if (app.request.locale|locale_name(app.request.locale)|u.title ) == "English" %}
                                    <img class="flag" src="{{ asset('images/flags/us.jpg') }}">
                                    {% else %}
                                    <img class="flag" src="{{ asset('images/flags/russia.jpg') }}">
                                    {% endif %}
                                    {{ app.request.locale|locale_name(app.request.locale)|u.title }}
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown-language">
                                    <a class="dropdown-item" href="{{ path('lang', {loc: 'en'}) }}">
                                        <img class="flag" src="{{ asset('images/flags/us.jpg') }}">
                                        English
                                    </a>
                                    <a class="dropdown-item" href="{{ path('lang', {loc: 'ru'}) }}">
                                        <img class="flag" src="{{ asset('images/flags/russia.jpg') }}">
                                        Russian
                                    </a>
                                </div>
                            </li>
                        </ul>
                        {% if is_granted('ROLE_USER') %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                {{ app.user.email }}
                                {% if (app.user.photo) %}
                                <img src="{{ asset('images/users/') }}{{ app.user.photo }}"
                                    class="rounded-circle smallAva" alt="User photo">
                                {% else %}
                                <img src="{{ asset('images/users/no-avatar.png') }}" class="rounded-circle smallAva"
                                    alt="User photo">
                                {% endif %}
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li>
                                    <a class="dropdown-item" href="{{ path('user_profile', {id: app.user.id}) }}">{% trans %}My Profile{% endtrans %}</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">{% trans %}My Collections{% endtrans %}</a>
                                </li>
                                {% if is_granted('ROLE_ADMIN') %}
                                <li>
                                    <a class="dropdown-item" href="#">{% trans %}Admin panel{% endtrans %}</a>
                                </li>
                                {% endif %}
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                        href="{{ path('app_logout') }}">{% trans %}LOGOUT{% endtrans %}</a>
                                </li>
                            </ul>
                        </li>
                        {% endif %}

                    </div>
                </div>
            </div>
        </nav>
    </header>
