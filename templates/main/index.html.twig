{% extends 'base.html.twig' %}

{% block title %}{% trans %}INFO PRINT{% endtrans %}{% endblock %}

{% block body %}
    <header class="header">
        <div class="header-logo">
            <a href="{{ path('home') }}">
                <img src="{{ asset('images/logo/logo.png') }}" alt="На главную">
            </a>
        </div>
        <nav class="header-menu">
            <ul class="menu__list">
                <li class="menu__item lang-menu">
                    <a href="#" class="lang-menu__btn dropdown-icon" title="Current language">
                        {% if (app.request.locale|locale_name(app.request.locale)|u.title ) == "English" %}
                            <img class="flag" src="{{ asset('images/flags/us.jpg') }}">
                        {% else %}
                            <img class="flag" src="{{ asset('images/flags/russia.jpg') }}">
                        {% endif %}
                            {{ app.request.locale|locale_name(app.request.locale)|u.title }}
                    </a>
                    <div class="lang-menu__items">
                        <a href="{{ path('lang', {loc: 'en'}) }}" title="English language">
                            <img src="{{ asset('images/flags/us.jpg') }}" alt="English">
                            English
                        </a>
                        <a href="{{ path('lang', {loc: 'ru'}) }}" title="Russian language">
                            <img src="{{ asset('images/flags/russia.jpg') }}" alt="Russian">
                            Russian
                        </a>
                    </div>
                </li>
                {% if is_granted('ROLE_USER') %}
                <li class="menu__item user-menu">
                    <a href="#" class="user-menu__btn dropdown-icon" title="User menu">
                        {{ app.user.email }}
                        {% if (app.user.photo) %}
                            <img src="{{ asset('images/users/') }}{{ app.user.photo }}" alt="User photo">
                        {% else %}
                            <img src="{{ asset('images/users/no-avatar.png') }}" alt="User photo">
                        {% endif %}
                    </a>
                    <div class="user-menu__items">
                        <a href="{{ path('user_profile', {id: app.user.id}) }}" title="My profile">{% trans %}My Profile{% endtrans %}</a>
                        <hr>
                        <a href="{{ path('app_logout') }}">{% trans %}LOGOUT{% endtrans %}</a>
                    </div>
                </li>
                {% endif %}
            </ul>
        </nav>
    </header>
    <main class="page">
        <div class="sidebar">
            <nav class="sidebar-menu">
                <ul class="menu__list">
                    <li class="menu__item"><a href="{{ path('home') }}" class="menu__link"><img src="{{ asset('images/icon/dashboard.svg') }}" alt="" class="menu__icon">Dashboard</a></li>
                    <li class="menu__item device-submenu">
                        <a href="#" class="menu-link dropdown-icon"><img src="{{ asset('images/icon/devices.svg') }}" alt="" class="menu__icon">Devices</a>
                        <ul class="menu-sub__list">
                            <li class="menu-sub__item"><a href="#" class="menu-sub__link">View</a></li>
                            {% if is_granted('ROLE_ADMIN') %}
                            <li class="menu-sub__item"><a href="#" class="menu-sub__link">Edit</a></li>
                            {% endif %}
                            <li class="menu-sub__item"><a href="#" class="menu-sub__link">Manufacturer</a></li>
                        </ul>
                    </li>
                    <li class="menu__item"><a href="#" class="menu__link"><img src="{{ asset('images/icon/users.svg') }}" alt="" class="menu__icon">Users</a></li>
                    <li class="menu__item"><a href="#" class="menu__link"><img src="{{ asset('images/icon/services.svg') }}" alt="" class="menu__icon">Services</a></li>
                    <li class="menu__item"><a href="#" class="menu__link"><img src="{{ asset('images/icon/reports.svg') }}" alt="" class="menu__icon">Reports</a></li>
                    <li class="menu__item"><a href="#" class="menu__link"><img src="{{ asset('images/icon/location.svg') }}" alt="" class="menu__icon">Locations</a></li>
                </ul>
            </nav>
        </div>
        <div class="content">
            <section class="content-body">
                {% block content %}
                
                <h1 class="title">View device</h1>
                            <h1 class="title">View device</h1>
                            <h1 class="title">View device</h1>
                            <h1 class="title">View device</h1><h1 class="title">View device</h1>
                            <h1 class="title">View device</h1>
                            <h1 class="title">View device</h1>
                            
                            <div class="tables">
                                Test table
                            </div>

                {% endblock %}
            </section>
                <footer class="content-footer">2022 © hamenok</footer>
        </div>
    </main>
{% endblock %}  