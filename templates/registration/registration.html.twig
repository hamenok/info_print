{% extends 'base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row no-gutter justify-content-center">
        <div class="col-12 col-lg-4 col-md-4">
            <div class="form-login shadow-lg">
                {{ form_start(registrationForm) }}
                <h1 class="h3 mb-4 fw-normal text-center">{% trans %}Registration{% endtrans %}</h1>
                    <div class="mb-3">
                        {{ form_errors(registrationForm.email) }}
                        {{ form_label(registrationForm.email,'Email:') }}
                        {{ form_widget(registrationForm.email) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(registrationForm.plainPassword,'Password:') }}
                        {% if form_errors(registrationForm.plainPassword) %}
                            <div class="alert alert-danger" role="alert">
                                {{ form_errors(registrationForm.plainPassword) }}
                            </div>
                        {% endif %}
                        {{ form_widget(registrationForm.plainPassword) }}
                    </div>
                    <div class="mb-3">
                        {{ form_errors(registrationForm.agreeTerms) }}
                        {{ form_widget(registrationForm.agreeTerms) }}
                        {{ form_label(registrationForm.agreeTerms,'Ð¡onfirm') }}
                    </div>
                        {{ form_row(registrationForm.save) }}
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
